        <TextBlock x:Name="lbl_Frecuencia" HorizontalAlignment="Left" Margin="280,74,0,0" TextWrapping="Wrap" Text="0.0" VerticalAlignment="Top" FontSize="36" Width="174" Height="75"/>
        <TextBlock x:Name="lbl500" HorizontalAlignment="Left" Margin="487,132,0,0" TextWrapping="Wrap" Text="Debajo de 500" VerticalAlignment="Top" Height="47" Width="171" FontSize="24"/>
        <Canvas HorizontalAlignment="Left" Height="160" Margin="26,250,0,0" VerticalAlignment="Top" Width="746">
            <Image x:Name="imgCarro" Height="100" Canvas.Left="622" Canvas.Top="10" Width="124" Source="imgCarro.jpeg"/>
        </Canvas>

    </Grid>
</Window>
